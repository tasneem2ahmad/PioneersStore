@model IEnumerable<ChildDepartmentViewModel>
@if (Model.Count() == 0)
{
    <div class="alert alert-warning" role="alert">
        <h1> No SubDepartments yet</h1>
    </div>
}

else
{
    <div class="page-header">
        <div class="page-title">
            <h3>SubDepartments</h3>
            <div class="crumbs">
                <ul id="breadcrumbs" class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i></a>&nbsp; -> &nbsp;</li>
                    <li><a href="#">SubDepartments</a></li>



                </ul>

            </div>
        </div>



    </div>
    <br />
    <a href="/ChildDepartments/Create" class="btn btn-secondary " type="submit"> Add SubDepartment </a>
    <br />
    <br />
    <div class="row">
        <table class="table" id="example">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(d => d.Id)</th>
                    <th>@Html.DisplayNameFor(d => d.ArabicName)</th>
                    <th>@Html.DisplayNameFor(d => d.EnglishName)</th>
                    <th>Image</th>
                    <th>State</th>
                    <th>ShowUser</th>
                    <th>Details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ChildDepartmentViewModel item in Model)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ArabicName</td>
                        <td>@item.EnglishName</td>
                        <td><img src="~/files//Imgs/@item.ImageName" class="img-fluid rounded" height="40" width="40" /></td>
                        @if (item.IsApproved == false)
                        {
                            <td>
                                <span class="text-danger">NotApproved</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="text-success">Approved</span>
                            </td>
                        }

                        @if (item.IsShownUser == false)
                        {
                            <td>
                                <span class="text-danger">UnseentoUser</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="text-success">SeentoUser</span>
                            </td>
                        }
                        <partial name="_ButtonsIndex" model="item.Id.ToString()">
                    </tr>

                }

            </tbody>
        </table>
    </div>



}
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>