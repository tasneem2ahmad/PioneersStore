@using Pioneers.DAL.Entities
@model DepartmentViewModel
<div class="col-auto">
    @if (Model != null && Model.Id != 0)
    {
        <input asp-for="Id" hidden />
    }
    <label asp-for="ArabicName" class="col-form-label"></label>
</div>
<div class="col-auto">
    <input asp-for="ArabicName" class="form-control" />
