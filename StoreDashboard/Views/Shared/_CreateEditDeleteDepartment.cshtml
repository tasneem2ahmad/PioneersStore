</div>
<div class="col-auto">
    <label asp-for="Description" class="col-form-label"></label>
</div>
<div class="col-auto">
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="col-auto">
    <label asp-for="EnglishName" class="col-form-label"></label>
</div>
<div class="col-auto">
    <input asp-for="EnglishName" class="form-control" />
    <span asp-validation-for="EnglishName" class="text-danger"></span>
</div>
<div class="col-auto">
    <label asp-for="EnglishDescription" class="col-form-label"></label>
</div>
<div class="col-auto">
    <input asp-for="EnglishDescription" class="form-control" />
    <span asp-validation-for="EnglishDescription" class="text-danger"></span>
</div>
