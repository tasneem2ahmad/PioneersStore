@model IEnumerable<MarketViewModel>
<br />
<a href="/Markets/Create" class="btn btn-secondary " type="submit"> Add Market </a>
<br />
<br />
@if (Model.Count() == 0)
{
    <div class="alert alert-warning" role="alert">
        <h1> No Markets yet</h1>
    </div>
}
else
{
    <div class="page-header">
        <div class="page-title">
            <h3>Markets</h3>
            <div class="crumbs">
                <ul id="breadcrumbs" class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i></a>&nbsp; -> &nbsp;</li>
                    <li><a href="#">Markets</a></li>
                </ul>

            </div>
        </div>

    </div>

    <div class="row">
        <table class="table" id="example">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(d => d.Id)</th>
                    <th>@Html.DisplayNameFor(d => d.SortOrder)</th>
                    <th>@Html.DisplayNameFor(d => d.ArabicName)</th>
                    <th>@Html.DisplayNameFor(d => d.EnglishName)</th>
                    <th>Image</th>                   
                    <th>Details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MarketViewModel item in Model)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.SortOrder</td>
                        <td>@item.ArabicName</td>
                        <td>@item.EnglishName</td>
                        <td><img src="~/files//Imgs/@item.ImageName" class="img-fluid rounded" height="40" width="40" /></td>
                        
                        <partial name="_ButtonsIndex" model="item.Id.ToString()">
                    </tr>

                }

            </tbody>
        </table>
    </div>



}
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
